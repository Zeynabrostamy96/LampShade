@page
@model ServciceHost.Areas.Adminstration.Pages.Blog.Articles.IndexModel
@{
    Layout = "Shared/_AdminLayout";
    ViewData["title"] = "مدیریت مقالات ";
}

<div class="row">
    <div class="col-sm-12">
        <h4 class="page-title pull-right"></h4>
        <p class="pull-left">
            <a class="btn btn-success btn-lg" asp-page="./Create">ایجاد  مقاله جدید</a>
        </p>
    </div>
</div>

<div class="row">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">جستجو در مقالات </h3>
            </div>
            <div class="panel-body">
                <form class="form-inline" role="form" method="get">
                    <div class="form-group">
                        <label class="sr-only" asp-for="saerchModel.Title"></label>
                        <input class="form-control" asp-for="saerchModel.Title" placeholder="عنوان مقاله  ">
                    </div>
                    <div class="form-group">
                        <label class="sr-only" asp-for="saerchModel.CategoryId"></label>
                        <select   asp-for="saerchModel.CategoryId"  asp-items="Model.categories" >
                            <option value="0">
                                گروه مقاله...
                            </option>
                        </select>
                    </div>




                    <button type="submit" class="btn btn-success waves-effect waves-light m-l-10">جستجو</button>
                    <a class="btn btn-primary waves-effect waves-light m-l-10">مشاهده همه</a>
                </form>
            </div>
        </div>
    </div>
</div>

<div class="row" id="ProductCategoriesDiv">
    <div class="col-md-12">
        <div class="panel panel-default">
            <div class="panel-heading">
                <h3 class="panel-title">لیست مقالات </h3>
            </div>
            <div class="panel-body">
                <div class="row">
                    <div class="col-md-12 col-sm-12 col-xs-12">
                        <table id="datatable" class="table table-striped table-bordered">
                            <thead>
                                <tr>
                                    <th>#</th>
                                    <th>عکس</th>
                                    <th>عنوان </th>
                                    <th>نام گروه </th>
                                    <th>توضیحات کوتاه  </th>
                                    <th>تاریخ انتشار</th>
                                    <th>عملیات</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var item in Model.article)
                                {
                                    <tr>
                                        <td>@item.id </td>
                                        <td>
                                            <img src="~/ProductPicture/@item.Picture" style="width: 70px; height: 70px" />
                                        </td>
                                        <td> @item.Title</td>
                                        <td>@item.ArticleCategoryName</td>
                                        <th>@item.ShortDescription</th>
                                        <td> @item.PublishDate</td>
                                        <td>
                                            <a class="btn btn-warning pull-right m-rl-5" asp-page="./Edit" asp-route-id="@item.id" >
                 
                                                <i class="fa fa-edit"></i> ویرایش

                                            </a>
                                        </td>
                                    </tr>


                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/AdminTheme/assets/datatables/jquery.dataTables.min.js"></script>
    <script src="~/AdminTheme/assets/datatables/dataTables.bootstrap.js"></script>

    <script type="text/javascript">
        $(document).ready(function () {
            $('#datatable').dataTable();
        });
    </script>
}

