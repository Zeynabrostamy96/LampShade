@model CreateInventory
@using InventoryManagement.Application.Contract.Inventory
@{
}
<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true">×</button>
    <h4 class="modal-title"  >ایجادانبارجدید </h4>
</div>

<form asp-page="./Index" asp-page-handler="Create"
      method="post"
      data-ajax="true"
      data-callback=""
      data-action="Refresh"
       enctype="multipart/form-data"
>
    <div class="modal-body">
         <div class="row">
            <div class="col-md-6`">
                <div class="form-group">
                    <label asp-for="productid" class="control-label">انتخاب محصول</label>
                    <select asp-for="productid" asp-items='new SelectList(Model.products,"id","Name")'>
                        <option value="0">
                            انتخاب محصول
                        </option>
                    </select>
                    <span asp-validation-for="productid" class="error"></span>
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label asp-for="unitprice" class="control-label">قیمت واحد</label>
                    <input type="text" class="form-control" asp-for="unitprice" >
                    <span asp-validation-for="unitprice" class="error"></span>
                </div>
            </div>
        </div>
    </div>
    <div class="modal-footer">
        <button type="button" class="btn btn-default waves-effect" data-dismiss="modal">بستن</button>
        <button type="submit" class="btn btn-info waves-effect waves-light">تعریف</button>
    </div>
</form>
